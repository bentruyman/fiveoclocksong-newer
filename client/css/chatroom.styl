// chatroom
#chatroom
  background: #111
  background: url("/images/wordmark/large.png") no-repeat center center,
              url("/images/ui/checkered.png"),
              #111
  box-shadow: inset 0 0 20px #000
  height: 355px
  position: relative
  // phone
  @media only screen and (max-width: 767px)
    background: url("/images/ui/checkered.png")

#chatroom-messages
  box-sizing: border-box
  height: 280px
  overflow: auto
  position: absolute
  top: 20px
  width: 100%
  .message-timestamp
    color: #666
  .message-username
    font-weight: bold
  .message-contents
    // nothing
  @media only screen and (max-width: 767px)
    font-size: 12px
    -webkit-overflow-scrolling: touch;

#chatroom-input
  background-color: #2c2c2c
  border: 1px solid rgba(255, 255, 255, 0.24)
  border-radius: 10px
  box-sizing: border-box
  color: fg
  display: none
  font-size: 12px
  padding: 5px 10px
  position: absolute
  top: 310px
  width: 100%
  .logged-in &
    display: block

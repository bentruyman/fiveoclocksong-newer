html
  head
    meta(charset="utf-8")
    title= "fiveoclocksong"
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/stylesheets/lib/base.min.css")
    link(rel="stylesheet", href="/stylesheets/fiveoclocksong.css")
  body
    header#page-header
      #user-status
        .wrapper.clearfix
      .wrapper.clearfix
        h1
          a(href="/") fiveoclocksong
        nav#primary-navigation
          ul
            li
              a(href="/login") login
            li
              a(href="/achievements") achievements
            li
              a(href="/about") about
            li
              a(href="/help") help

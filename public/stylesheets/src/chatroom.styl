// chatroom

.chatroom
  background-color: #111 url("/images/ui/checkered.png")
  background: #111 url("/images/ui/checkered.png")
  background: durl("/images/wordmark/large.png") no-repeat center center, durl("/images/ui/checkered.png")
  height: 360px
  border-color: #555
  border-color: rgba(255,255,255,0.3)
  border-style: solid
  border-width: 1px 0
  -webkit-box-shadow: inset 0 5px 10px #000
  box-shadow:         inset 0 5px 10px #000
  
  .chatroom-messages
    font-size: 14px
    word-wrap: break-word
    margin-top: 20px
    height: 295px
    overflow: auto
    -webkit-overflow: touch
    li
      margin: 5px 0
    .time
      color: #666
      &:before
        content: "["
      &:after
        content: "] "
    .author
      color: #999
      font-weight: bold
      &:before
        content: "<"
      &:after
        content: "> "
      &.me
        color: #ff5400
  
  .chatroom-input
    color: color-text-light
    text-indent: 6px
    background: #2c2c2c
    border: 1px solid rgba(255,255,255,0.25)
    border-radius: 10px
    width: 100%
    padding: 6px 0
    transition: 0.25s ease-in-out
    transition-property: background, border-color
  
    &:focus
      background: #353535
      border-color: rgba(255,255,255,0.35)
